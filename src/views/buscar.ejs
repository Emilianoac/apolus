<%- include('partials/_head'); %>
  <body>
    <input type="checkbox" hidden id="darkmodeHidden">
    <div class="main-container">
      <%- include('partials/_top-navbar'); %>
      <%- include('partials/_menu_lateral'); %> 

      <main class="main main-busqueda">
        <div class="row mb-4">
          <div class="col-lg-12">
              <h1>Busqueda</h1>     
          </div>
        </div>

       <%#--- Busquedas recientes ----%>
        <div class="row">
          <section>
              <h2 class=" mb-lg-3 mt-4 mt-md-0 mb-0">Busquedas recientes</h2>
              <div class="row">
                <% busquedasRecientes.forEach(function (artista) { %>
                  <div class="col-lg-3 col-6 mt-4 mt-lg-0">
                    <article class="categoria-musica-card shadow-card">
                      <a href="/artista/<%=artista.slug %>">
                        <div class="img-container">
                          <img class="img-fluid" src="<%=artista.banner %> " alt="miniatura <%= artista.nombre_artista%>">
                        </div>
                        <p class="titulo-resultado mb-0"> <%= artista.nombre_artista %> </p>
                        <p class="tipo-resultado">Artista </p>
                      </a>
                      <button data-play class="btn btn-play"> <i class="fas fa-play-circle"></i></button>
                    </article>
                  </div>
                <% }) %>
              </div>
            </section>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <hr class="separador">
          </div>
        </div>

        <%#--- Canciones ----%>
        <div class="row">
          <div class="col-lg-12">
            <h2 class=" mb-3">Canciones</h2>
            <div class="container-lista-reproduccion shadow-card">
              <ul class="lista-reproduccion"> 
                <li>
                  <div class="miniatura-cancion"></div>
                  <div class="titulo-cancion__lista-reproduccion">Nombre</div>
                  <div class="nombre-artista__lista-reproduccion">Artista</div>
                  <div class="duracion-cancion__lista-reproduccion">Duracion</div>
                  <div class="favorito_lista-reproduccion btn" ></div>
                </li>
                <% primerAlbum.forEach(album => { %>
                  <li>
                    <img class="miniatura-cancion img-fluid" src="<%= album.cover_album %>" 
                    load="lazy" alt="<%= album.lista_canciones[0].nombre_cancion %>" title="<%= album.lista_canciones[0].nombre_cancion %>"> 
                    <div class="titulo-cancion__lista-reproduccion"> <%= album.lista_canciones[0].nombre_cancion %> </div>
                    <div class="nombre-artista__lista-reproduccion"><%= album.lista_canciones[0].interprete_cancion %> </div>
                    <div class="duracion-cancion__lista-reproduccion"><%= album.lista_canciones[0].duracion_cancion%></div>
                    <button data-favorito="" class="favorito_lista-reproduccion btn" title="Marcar como favorito"><i class="far fa-heart"></i></button>
                  </li>
                <% })%>
              </ul>
            </div>     
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <hr class="separador">
          </div>
        </div>

        <%#--- Artistas ----%>
        <div class="row">
          <section>
              <h2 class=" mb-lg-3 mb-0">Artistas</h2>
              <div class="row">
                <% artistasBusqueda.forEach(function (artista) { %>
                  <div class="col-lg-3 col-6 mt-4 mt-lg-0">
                    <article class="categoria-musica-card shadow-card">
                      <a href="/artista/<%= artista.slug%>">
                        <div class="img-container">
                          <img class="img-fluid" src="<%=artista.banner %> " alt="miniatura">
                        </div>
                        <p class="titulo-resultado mb-0"> <%= artista.nombre_artista%> </p>
                      </a>
                      <button data-play class="btn btn-play"> <i class="fas fa-play-circle"></i></button>
                    </article>
                  </div>
                <% }) %>
              </div>
            </section>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <hr class="separador">
          </div>
        </div>

        <%#--- Album ----%>
        <div class="row">
          <section>
              <h2 class=" mb-lg-3 mb-0">√Ålbumes</h2>
              <div class="row">
                <% primerAlbum.forEach(function (album) { %>
                  <div class="col-lg-3 col-6 mt-4 mt-lg-0">
                    <article class="categoria-musica-card shadow-card">
                      <a href="#!">
                        <div class="img-container">
                          <img class="img-fluid" src="<%=album.cover_album %> " alt="miniatura">
                        </div>
                        <p class="titulo-resultado mb-0"> <%= album.nombre_album %> </p>
                        <p class="tipo-resultado"><%= album.lista_canciones[0].interprete_cancion %> </p>
                      </a>
                      <button data-play class="btn btn-play"> <i class="fas fa-play-circle"></i></button>
                    </article>
                  </div>
                <% }) %>
              </div>
            </section>
        </div>
      </main>

      <%- include('partials/_reproductor-bottom'); %> 
    </div>
<%- include('partials/_footer.ejs') %> 