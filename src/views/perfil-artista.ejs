<%- include('partials/_head'); %>
  <body>
    <input type="checkbox" hidden id="darkmodeHidden">
    <div class="main-container">
      <%- include('partials/_top-navbar') %> 
      <%- include('partials/_menu_lateral'); %> 
      <main class="main main-perfil-artista">
        <div class="row">

          <div class="col-lg-7 position-relative pe-lg-4 pb-4 pb-lg-0 pt-4 pt-sm-0">
            <section class="container-banner-artista shadow-card">
              <img class="img-artista img-fluid" src="../img/benee-02.jpg" alt="">
              <h1 class="nombre-artista-banner">Benee</h1>
              <button id="btn-seguir" class="btn bg-light"><span>Seguir</span> <i class="fas fa-plus"></i></button>
              <ul class="redes-sociales d-flex list-unstyled">
                <li><a href="#!"><i class="fab fa-instagram " title="Instagram"></i></a></li>
                <li><a href="#!"><i class="fab fa-twitter " title="Twitter"></i></a></li>
                <li><a href="#!"><i class="fab fa-facebook " title="Facebook"></i></a></li>
                <li><a href="#!"><i class="fab fa-youtube " title="Youtube"></i></a></li>
              </ul> 
            </section>     

            <h2 class="titulo-seccion mt-4 mt-lg-4">Albumes</h4>
            <section class="albumes shadow-card">
              <figure class="album">
                <a href="#!">
                  <div class="img-container">
                    <img class="img-fluid" src="../img/album02.jpg" alt="">
                  </div>
                  <figcaption> Fire on Marzzs LP <time class="d-block" datetime="2019-06-28">(2019)</time></figcaption>
                </a>
              </figure>
              <figure class="album">
                <a href="#!">
                  <div class="img-container">
                    <img class="img-fluid" src="../img/album01.jpg" alt="">         
                  </div>
                  <figcaption> Stella & Steve LP <time class="d-block" datetime="2019-11-15">(2019)</time></figcaption>
                </a>
              </figure>
              <figure class="album">
                <a href="#!">
                  <div class="img-container">
                    <img class="img-fluid" src="../img/hey.jpg" alt="">
                  </div>
                  <figcaption> Hey U X <time class="d-block" datetime="2020-11-13">(2020)</time></figcaption>
                </a>
              </figure>
            </section> 
          </div>

          <div class="col-lg-5 mt-4 mt-sm-0">
            <article class="reproductor-album shadow-card">
              <div class="miniatura__reproductor-album">
                <img class="img-fluid" src="../img/hey.jpg" alt="miniatura cancion">
              </div>
              <div class="datos__reproductor-album">
                  <h4 class="titulo__reproductor-album">Hey U X</h4>
                  <h3 class="nombre-artista__reproductor-album">Benee</h3>
                  <span class="fecha-album">2020</span>
              </div>
              <button class="btn btn-play" data-play="" >
                <i class="fas fa-play-circle "></i>
              </button>
              <button data-favorito="" class="marcar-favorito btn" title="Marcar como favorito">
                <i class="far fa-heart"></i>
              </button>
            </article>
            <div class="container-lista-reproduccion shadow-card mt-4">
              <ul class="lista-reproduccion"> </ul>
            </div>
          </div>
        </div>
        <div class="bg-circulo"></div>
      </main>
      <%- include('partials/_reproductor-bottom'); %> 

      <%- include('partials/_modal-registrarse'); %> 
      <%- include('partials/_modal-ajustes'); %> 
    </div>
    <template id="item-lista-reproduccion">
      <li>
        <div class="titulo-cancion__lista-reproduccion"></div>
        <div class="nombre-artista__lista-reproduccion"></div>
        <div class="duracion-cancion__lista-reproduccion"></div>
        <button data-favorito="" class="favorito_lista-reproduccion btn" title="Marcar como favorito"><i class="far fa-heart"></i></button>
      </li>
    </template>
<%- include('partials/_footer.ejs') %> 
