<%- include('partials/_head'); %>
  <body>
    <input type="checkbox" hidden id="darkmodeHidden">
    <div class="main-container">

      <%- include('partials/_top-navbar') %>

      <%- include('partials/_menu_lateral'); %> 

      <main class="main main-busqueda main-favoritos">
        <div class="row">
          <div class="col-lg-12">
              <h1>Favoritas</h1>     
          </div>
        </div>

        <%#--- favoritos ----%>
        <div class="row mt-4 mt-lg-0">
          <div class="col-lg-12">
            <div class="container-lista-reproduccion shadow-card">
              <ul class="lista-reproduccion"> 
                <li>
                  <div class="miniatura-cancion"></div>
                  <div class="titulo-cancion__lista-reproduccion">Nombre</div>
                  <div class="nombre-artista__lista-reproduccion">Artista</div>
                  <div class="duracion-cancion__lista-reproduccion">Duracion</div>
                  <div class="favorito_lista-reproduccion btn" ></div>
                </li>
                <% for(let i = 0; i < 4; i++) {%>
                  <li>
                    <img class="miniatura-cancion img-fluid" src="<%= canciones[i].miniaturaCacion %>"> 
                    <div class="titulo-cancion__lista-reproduccion"><%= canciones[i].nombreCancion %> </div>
                    <div class="nombre-artista__lista-reproduccion"><%= canciones[i].nombreArtista %> </div>
                    <div class="duracion-cancion__lista-reproduccion"><%=  canciones[i].duracionCancion%></div>
                    <button data-favorito="" class="favorito_lista-reproduccion btn" title="Marcar como favorito"><i class="fas fa-heart"></i></button>
                  </li>
                <% } %>
                
              </ul>
            </div>     
          </div>
        </div>
      </main>

      <template id="item-lista-reproduccion">
        <li>
          <div class="titulo-cancion__lista-reproduccion"></div>
          <div class="nombre-artista__lista-reproduccion"></div>
          <div class="duracion-cancion__lista-reproduccion"></div>
          <button data-favorito="" class="favorito_lista-reproduccion btn" title="Marcar como favorito"><i class="far fa-heart"></i></button>
        </li>
      </template>

      <%- include('partials/_reproductor-bottom'); %> 
      
      <%- include('partials/_modal-registrarse'); %> 
      <%- include('partials/_modal-ajustes'); %> 
    </div>
<%- include('partials/_footer.ejs') %> 